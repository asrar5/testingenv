# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Application Paths
BUILD_ROOT=/home/asrar/Desktop/testing1/testing/builds
UPLOAD_ROOT=/home/asrar/Desktop/testing1/testing/uploads
BACKUP_ROOT=/home/asrar/Desktop/testing1/testing/builds/.backups

# Nginx Configuration
NGINX_SITES_AVAILABLE=/etc/nginx/sites-available
NGINX_SITES_ENABLED=/etc/nginx/sites-enabled
NGINX_GATEWAY_ROUTES=/etc/nginx/gateway-routes
NGINX_GATEWAY_CONFIG=/etc/nginx/gateway.conf
NGINX_DOMAIN=yourdomain.com

# Port Management
MIN_PORT=3320
MAX_PORT=3990

# File Upload Limits
MAX_FILE_SIZE=1073741824
MAX_ZIP_SIZE=1073741824

# Docker Configuration
DOCKER_MEMORY_LIMIT=512m
DOCKER_CPU_LIMIT=1
DOCKER_RESTART_POLICY=always

# Authentication
AUTH_USERS_FILE=/home/asrar/Desktop/testing1/testing/data/users.json
AUTH_PORTS_FILE=/home/asrar/Desktop/testing1/testing/data/ports.json
AUTH_HISTORY_FILE=/home/asrar/Desktop/testing1/testing/data/history.json

# History Management
HISTORY_MAX_ENTRIES=100

# Logging
LOG_LEVEL=info
LOG_FILE=/home/asrar/Desktop/testing1/testing/logs/app.log

# Security
ENABLE_HTTPS=false
SSL_CERT_PATH=/etc/ssl/certs/server.crt
SSL_KEY_PATH=/etc/ssl/private/server.key

# Database/Storage
DATA_DIR=/home/asrar/Desktop/testing1/testing/data

# Feature Flags
ENABLE_DOCKER_DEPLOYMENTS=true
ENABLE_ZIP_DEPLOYMENTS=true
ENABLE_ADMIN_PANEL=true
